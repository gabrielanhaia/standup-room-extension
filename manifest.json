{
  "manifest_version": 3,
  "name": "Standup Room",
  "version": "1.0.0",
  "author": "Gabriel Anhaia",
  "homepage_url": "https://github.com/gabrielanhaia",
  "action": {
    "default_title": "Standup Room",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.supabase.co/*"],
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://meet.jit.si/*",
        "https://whereby.com/*",
        "https://*.whereby.com/*"
      ],
      "js": ["vendor/supabase.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://*.supabase.co wss://*.supabase.co"
  }
}
